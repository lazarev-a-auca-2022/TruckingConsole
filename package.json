    "deploy:logs": "docker-compose logs -f",
    "deploy:stop": "docker-compose down"
  },
  "keywords": [
    "trucking",
    "permits",
    "pdf",
    "parsing",
    "console"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
