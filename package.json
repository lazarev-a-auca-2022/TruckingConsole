    "tesseract.js": "^5.0.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "axios": "^1.5.0",
    "gpx-builder": "^3.0.0",
    "mongodb": "^6.0.0",
    "mongoose": "^7.5.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3"
